@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Zmień hasło";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>

            <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                <h4>Zmień hasło do swojego konta</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="col-md-2 control-label">Obecne hasło</label>
                    <div class="col-md-10">
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="col-md-2 control-label">Nowe hasło</label>
                    <div class="col-md-10">
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-md-2 control-label">Potwierdź nowe hasło</label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Zmień hasło</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
