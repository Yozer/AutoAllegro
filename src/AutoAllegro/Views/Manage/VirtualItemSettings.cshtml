@model VirtualItemSettingsViewModel
@{
    ViewData["Title"] = "Ustawienia wirtualnych przedmiotów";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>

            <form asp-controller="Manage" asp-action="VirtualItemSettings" method="post" class="form-horizontal">
                <h4>Podaj dane odnośnie wysyłki wirtualnych przedmiotów</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DisplayName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="DisplayName" class="form-control" />
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ReplyTo" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ReplyTo" class="form-control" />
                        <span asp-validation-for="ReplyTo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MessageSubject" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MessageSubject" class="form-control" />
                        <span asp-validation-for="MessageSubject" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="non_material_message" class="col-sm-2">Szablon wiadomości dla kupujących</label>
                    <div class="col-sm-10">
                        Możesz użyć takich znaczników jak:
                        <ul>
                            <li>{FIRST_NAME}</li>
                            <li>{LAST_NAME}</li>
                            <li>{QUANTITY}</li>
                            <li>{ITEM}</li>
                        </ul>
                        <textarea asp-for="MessageTemplate" class="form-control" rows="6" placeholder="Wpisz swoją wiadomość..."></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Zapisz</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
