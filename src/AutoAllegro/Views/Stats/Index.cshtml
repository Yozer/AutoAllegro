                onClick: function(event, details) {
                    var baseUrl = 'http://localhost:5000/';
                    baseUrl += 'Stats/Daily/';

                    var date = details[0]._model.label;
                    
                    var url = baseUrl + date;

                    window.location.href = url;
                }
            }
           
