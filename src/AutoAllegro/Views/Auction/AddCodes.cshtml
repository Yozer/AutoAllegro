@{
    ViewData["Title"] = Model.Title;
}
@model AddCodesViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Zarządzaj kodami dla aukcji: @Model.Title</h3>
            <p><a asp-action="Auction" asp-route-id="@Model.AuctionId" class="btn btn-primary btn-lg">Powrót do aukcji</a></p>
            <hr />
            <form asp-action="AddCodes" asp-controller="Auction">
                @Html.HiddenFor(t => t.AuctionId)
                <div class="form-group">
                    <label for="codes_list" class="col-sm-2">Dodaj nowe kody</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Codes" class="form-control" id="codes_list" rows="6" placeholder="Wprowadź każdy kod w nowej linii..."></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-success">Zapisz</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
