@model AddViewModel

@{
    ViewData["Title"] = "Dodaj aukcję";
    ViewData["bodyClass"] = "add-new-auction";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1>Dodaj aukcje</h1>
                <p><a asp-action="Add" asp-route-fetch="true" class="btn btn-default">Pobierz aukcje</a></p>
            </div>
        </div>
    </div>
    
    @if (Model.Auctions != null)
    {
        <form asp-controller="Auction" asp-action="Add" method="POST" class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <td>ID</td>
                            <td>Tytuł</td>
                            <td>Od</td>
                            <td>Do</td>
                            <td>Cena</td>
                            <td>Monitoruj</td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var auction in Model.Auctions)
                        {
                            <tr>
                                <td>@auction.Id</td>
                                <td>@auction.Name</td>
                                <td>@auction.StartDate</td>
                                <td>@auction.EndDate</td>
                                <td>@auction.Price</td>
                                <td><input name="auction_@auction.Id" type="checkbox" checked="@auction.IsMonitored"></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary btn-lg">Zapisz</button>
                </div>
            </div>
        </form>
    }
</div>
