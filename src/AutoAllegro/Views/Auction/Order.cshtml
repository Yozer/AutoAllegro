@{
    ViewData["Title"] = "Zamówienie " + Model.Id;
    ViewData["bodyClass"] = "order";
}

@model OrderViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1>Order: #@Model.Id</h1>
                <div class="row">
                    <div class="col-md-8">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quibusdam quae eos dolorum expedita, id tenetur inventore ut sed, facere odit eveniet nesciunt et. Possimus enim, itaque, at consectetur voluptatem mollitia.</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Login:</strong> @Model.Buyer.UserLogin</p>
                        <p><strong>Email:</strong> @Model.Buyer.Email</p>
                        <p><strong>Cena:</strong> @Html.DisplayFor(t => t.TotalPayment)</p>
                        <p><strong>Sztuk:</strong> @Model.Quantity</p>
                        <p><strong>Status:</strong> @Html.DisplayFor(t => t.OrderStatus)</p>
                    </div>
                </div>
                <p><a class="btn btn-primary btn-lg">Zobacz na allegro</a></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Dane kupującego</h3>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>Imię i nazwisko</td>
                            <td>@Model.Buyer.FirstName @Model.Buyer.LastName</td>
                        </tr>
                        <tr>
                            <td>Telefon</td>
                            <td>@Model.Buyer.Phone</td>
                        </tr>
                        <tr>
                            <td>Adres</td>
                            <td>@Model.Buyer.Address</td>
                        </tr>
                        <tr>
                            <td>Miasto</td>
                            <td>@Model.Buyer.City @Model.Buyer.PostCode</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            @if (Model.ShippingAddress != null)
            {
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Dane do wysyłki</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <td>Imię i nazwisko</td>
                                <td>@Model.ShippingAddress.FirstName @Model.ShippingAddress.LastName</td>
                            </tr>
                            <tr>
                                <td>Adres</td>
                                <td>@Model.ShippingAddress.Address</td>
                            </tr>
                            <tr>
                                <td>Miasto</td>
                                <td>@Model.ShippingAddress.City @Model.ShippingAddress.PostCode</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Szybkie akcje</h3>
                </div>
                <div class="panel-body">
                    <div class="list-group">
                        @if (Model.VirtualItem)
                        {
                            <a href="#" class="list-group-item">Zobacz kody</a>
                            <a href="#" class="list-group-item">Wygeneruj dodatkowy kod</a>
                            <a href="#" class="list-group-item">Zwolnij kody</a>
                        }
                        else
                        {
                            <a href="#" class="list-group-item">Wygeneruj przesyłkę</a>
                            <a href="#" class="list-group-item">Sprawdź status paczki</a>
                        }
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Wiadomość do kupującego</h3>
                </div>
                <div class="panel-body">
                    <p>@(Model.ShippingAddress?.MessageToSeller ?? "Brak wiadomości")</p>
                </div>
            </div>
        </div>
    </div>

</div>
