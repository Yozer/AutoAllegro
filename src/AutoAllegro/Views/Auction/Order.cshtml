@{
    ViewData["Title"] = "Zamówienie " + Model.Id;
    ViewData["bodyClass"] = "order";
}

@model OrderViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                @if (Model.Message != null)
                {
                    <p class="text-success">@Html.DisplayFor(t => t.Message)</p>
                }
                <h1>Zamówienie nr: #@Model.Id</h1>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Login:</strong> @Model.Buyer.UserLogin</p>
                        <p><strong>Email:</strong> @Model.Buyer.Email</p>
                        <p><strong>Cena:</strong> @Html.DisplayFor(t => t.TotalPayment)</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Sztuk:</strong> @Model.Quantity</p>
                        <p><strong>Status:</strong> @Html.DisplayFor(t => t.OrderStatus)</p>
                        <p><strong>Data zamówienia:</strong> @Html.DisplayFor(t => t.OrderDate)</p>
                    </div>
                </div>
                <p><a asp-action="Auction" asp-route-id="@Model.AuctionId" class="btn btn-primary btn-lg">Przejdź do aukcji</a></p>
                @if (Model.OrderStatus == OrderStatus.Created)
                {
                    // TUTAJ MODAL Z PYTANIEM CZY NA PEWNO CHCESZ TO ZROBI (nie da się tego cofnąć i automatycznie wyśle kody)
                    <form asp-action="MarkAsPaid">
                        @Html.HiddenFor(t => t.Id)
                        <button type="submit" class="btn btn-primary btn-lg">Oznacz jako opłacona</button>
                    </form>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Dane kupującego</h3>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>Imię i nazwisko</td>
                            <td>@Model.Buyer.FirstName @Model.Buyer.LastName</td>
                        </tr>
                        <tr>
                            <td>Telefon</td>
                            <td>@Model.Buyer.Phone</td>
                        </tr>
                        <tr>
                            <td>Adres</td>
                            <td>@Model.Buyer.Address</td>
                        </tr>
                        <tr>
                            <td>Miasto</td>
                            <td>@Model.Buyer.City</td>
                        </tr>
                        <tr>
                            <td>Kod pocztowy</td>
                            <td>@Model.Buyer.PostCode</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            @if (Model.ShippingAddress != null)
            {
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h3 class="panel-title">Dane do wysyłki</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <td>Imię i nazwisko</td>
                                <td>@Model.ShippingAddress.FirstName @Model.ShippingAddress.LastName</td>
                            </tr>
                            <tr>
                                <td>Adres</td>
                                <td>@Model.ShippingAddress.Address</td>
                            </tr>
                            <tr>
                                <td>Miasto</td>
                                <td>@Model.ShippingAddress.City</td>
                            </tr>
                            <tr>
                                <td>Kod pocztowy</td>
                                <td>@Model.ShippingAddress.PostCode</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Szybkie akcje</h3>
                </div>
                <div class="panel-body">
                    <div class="list-group">
                        @if (Model.VirtualItem)
                        {
                            @if (Model.GameCodes.Count > 0)
                            {
                                <a class="list-group-item" data-toggle="modal" data-target="#codesModal">Zobacz kody</a>
                                <div class="modal fade" id="codesModal" tabindex="-1" role="dialog">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" ><span>&times;</span></button>
                                                <h4 class="modal-title">Kupione kody</h4>
                                            </div>
                                            <div class="modal-body">
                                                <ul class="list-group">
                                                    @foreach (var code in Model.GameCodes) {
                                                        <li class="list-group-item">@code.Code</li>
                                                    }
                                                </ul>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-info" data-dismiss="modal">Zamknij</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.OrderStatus == OrderStatus.Done)
                            {
                                <form asp-action="GetExtraCode" onsubmit="return confirm('Czy na pewno chcesz wygenerować dodatkowy kod?');">
                                    @Html.HiddenFor(t => t.Id)
                                    <button type="submit" class="list-group-item">Wygeneruj dodatkowy kod</button>
                                </form>
                            }
                        }
                        else
                        {
                            // NALEPA!!!
                            <a href="#" class="list-group-item">Wygeneruj przesyłkę</a>
                            <a href="#" class="list-group-item">Sprawdź status paczki</a>
                        }
                        @if (Model.OrderStatus != OrderStatus.Canceled)
                        {
                            // tutaj też modale z potwierdzeniami czy na pewno chcesz to zrobić + lista gdzie można wybrać powód anulowania -> @Model.RefundReasons
                            <form asp-action="CancelOrder">
                                @Html.HiddenFor(t => t.Id)
                                <button type="submit" class="list-group-item">Anuluj zamówienie</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Wiadomość do kupującego</h3>
                </div>
                <div class="panel-body">
                    <p>@(Model.ShippingAddress?.MessageToSeller ?? "Brak wiadomości")</p>
                </div>
            </div>
        </div>
    </div>

</div>
