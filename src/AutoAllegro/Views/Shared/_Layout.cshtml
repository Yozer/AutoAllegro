<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - AutoAllegro</title>
<environment names="Development">
    <link href="~/lib/bootstrap/bootstrap-custom.min.css" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet">
</environment>
<environment names="Staging,Production">
    <link href="~/css/main.min.css" rel="stylesheet">
</environment>
</head>

<body class="@ViewData["bodyClass"]">
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
                    aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Auction" asp-action="Index">Allegro Template</a>
            </div>

            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <main id="main">
        @RenderBody()
    </main>

    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12 copyright">
                    &copy; 2016 Allegro Template.
                </div>
            </div>
        </div>
    </footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<environment names="Development">
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/main.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/js/main.min.js"></script>
</environment>
</body>

</html>
