@using Microsoft.AspNetCore.Identity
@using AutoAllegro.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <menulink controller-name="Auction" action-name="Index" menu-text="Lista aukcji"></menulink>
                <menulink controller-name="Auction" action-name="Add" menu-text="Dodaj aukcję"></menulink>
                <menulink controller-name="Statystyki" action-name="Index" menu-text="Statystyki"></menulink>    
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Witaj, @User.Identity.Name<span class="caret"></span> <span class="badge">3</span></a>
                    <ul class="dropdown-menu">
                        <li><a asp-controller="Manage" asp-action="Index">Ustawienia</a></li>
                        <li role="separator" class="divider"></li>
                        <li><button id="logout-btn" type="submit" class="btn btn-link ">Wyloguj</button></li>
                    </ul>
                </li>
            </ul>
        </div>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li> Do not allow register*@
        <li><a asp-controller="Account" asp-action="Login">Zaloguj się</a></li>
    </ul>
}
